{% extends "AppBundle::table.html.twig" %}
{% block page_title %}{{ressource.nom}}{% endblock %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>         
        </li>
        {% if ressource.session %}
        <li>
      <a href="{{ path('ressource_index', { 'id': ressource.session.id }) }}">{{ressource.session.nomConcours}}</a> 
          <i class="icon-angle-right"></i>          
        </li>
      {% else %}  
         <li>
      <a href="{{ path('ressource_index') }}">Documents</a> 
          <i class="icon-angle-right"></i>          
        </li>       
        {% endif %}
      <a href="#">{{ressource.nom}}</a>          
        </li>                 
      </ul>
   {% endblock %}
 {% block table_title %}{{ressource.nom}} {% endblock %}  
{% block table %}
    <table  class="table table-striped table-bordered bootstrap-datatable">
        <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ ressource.nom }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{% if ressource.price  %}{{ ressource.price }} XAF{% else %}Gratuit{% endif %}</td>
            </tr>            
            <tr>
                <th>Description</th>
                <td>{{ ressource.description }}</td>
            </tr>
            <tr>
                <th>Detail 1</th>
                <td>{{ ressource.detail1 }}</td>
            </tr>
            <tr>
                <th>Detail 2</th>
                <td>{{ ressource.detail2 }}</td>
            </tr>
            <tr>
                <th>Detail 3</th>
                <td>{{ ressource.detail3 }}</td>
            </tr>
            <tr>
                <th>Lien direct</th>
                <td>{{ ressource.url }}</td>
            </tr>
            <tr>
                <td>{{ ressource.imageUrl }}</td>
            </tr>
        </tbody>
    </table>
      <table class="table  no-table-bordered bootstrap-datatable">
        <tr> 
         <td>
           {% if ressource.session %}
       
            <a href="{{ path('ressource_index', { 'session': ressource.session.id }) }}">Retour</a>
       
         {% else %}         
          
      <a href="{{ path('ressource_index') }}">Retour</a>     
             
        {% endif %}
        </td>
       
        <td>
            <a href="{{ path('ressource_edit', { 'id': ressource.id }) }}">Modifier</a>
        </td>
         <td>
           {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </td>
          </tr> 
    </table>

{% endblock %}
