{% extends "AppBundle::table.html.twig" %}
{% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="#">Home</a> 
          <i class="icon-angle-right"></i>         
        </li>
        <li>
      <a href="{{ path('session_show', { 'id': session.id }) }}">{{session.nomConcours}} ~ {{session.nom}} </a> 
          <i class="icon-angle-right"></i>          
        </li>  
        <li>
      <a href="#">Les documents</a>    
        </li>               
      </ul>
{% endblock %}
{% block table_title %}Les Documents de  {{session.nomConcours}} ~ {{session.nom}} {% endblock %}  
{% block table %}
    <table class="table table-striped table-bordered" id="my-table-1">
        <thead>
            <tr>
                 <th class="col-md-6">Nom</th>
                <th class="col-md-3">Description</th>
                <th class="col-md-2">Detail1</th>
                <th class="col-md-1">Price</th>                
                <th class="col-md-2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.nom }}</td>
                <td>{{ ressource.description }}</td>
                <td>{{ ressource.detail1 }}</td>
                <td>{{ ressource.price }}</td>                
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('ressource_show', { 'id': ressource.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('ressource_edit', { 'id': ressource.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('ressource_new', { 'session': session.id }) }}">Nouveau document</a>
        </li>
    </ul>
{% endblock %}
