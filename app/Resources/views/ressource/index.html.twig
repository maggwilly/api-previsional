{% extends "AppBundle::table.html.twig" %}
{% block page_title %}Documents{% endblock %}
{% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>         
        </li>
        <li>
        {% if session %}
        <li>
      <a href="{{ path('ressource_index', { 'id': session.id }) }}">{{session.nomConcours}}</a> 
          <i class="icon-angle-right"></i>          
        </li>
        <li>
      <a href="#">Documents</a>          
        </li>     
      {% else %}  
         <li>
      <a href="{{ path('ressource_index') }}">Documents</a>          
        </li>       
        {% endif %}               
      </ul>
{% endblock %}
{% block table_title %}Documents  {% endblock %}  
{% block table %}
    <table class="table datatable" id="my-table-1">
        <thead>
            <tr>
                 <th class="col-md-8">Document</th>
                <th class="col-md-2">prix</th>                
                <th class="col-md-2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>
                   <a href="{{ path('ressource_show', { 'id': ressource.id }) }}">{{ ressource.nom }}
                  <p>{{ ressource.description }}</p>
                   </a>    
                </td>
                <td> {% if ressource.price  %}{{ ressource.price }} XAF{% else %}Gratuit{% endif %}</td>                
                <td>
                 <a href="{{ path('ressource_edit', { 'id': ressource.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
          {% if session %}
        <li>
            <a href="{{ path('ressource_new', { 'session': session.id }) }}" class="btn btn-default">Nouveau document</a>
        </li>
         {% else %}         
          <li>
         <a href="{{ path('ressource_new') }}" class="btn btn-default">Nouveau document</a>    
        </li>       
        {% endif %}      
    </ul>
{% endblock %}
