{% extends "AppBundle::layout.html.twig" %}
{% block title %}Inscriptions{% endblock %}
{% block body %}
<div class="col-md-12">
<div class="card">
  <div class="card-header" data-background-color="purple">
   <h4 class="title">Inscriptions</h4>
      <p class="category">Inscriptions</p>
    </div>
     <div class="card-content table-responsive">
     <h3 class="title">{{abonnements.length}}</h3>
         <table class="table">
        <thead>
            <tr>
                <th>studentId</th>
                <th>Programme</th>
                <th>Startdate</th>
                 <th>Enddate</th>
                <th>Method</th>
                <th>Plan</th>
                <th>Price</th>
                <th>Status</th>
                <th>Telpaidnumber</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for abonnement in abonnements %}
            <tr>
                <td><a href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">{{ abonnement.uid }}</a></td>
                <td>{{ abonnement.programme.nom }}</td>
                <td>{% if abonnement.startDate %}{{ abonnement.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                 <td>{% if abonnement.endDate %}{{ abonnement.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ abonnement.method }}</td>
                <td>{{ abonnement.plan }}</td>
                <td>{{ abonnement.price }}</td>
                <td>{{ abonnement.status }}</td>
                <td>{{ abonnement.telPaidNumber }}</td>
                <td>
  <a href="{{ path('abonnement_show', { 'id': abonnement.id }) }}">show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div 
 </div>
 </div>
   
{% endblock %}
