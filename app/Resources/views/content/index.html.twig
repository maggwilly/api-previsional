{% extends "AppBundle::layout.html.twig" %}
{% block title %}{{ article.titre }}{% endblock %}
{% block body %}
<div class="col-md-12">
<div class="card">
  <div class="card-header" data-background-color="purple">
   <h4 class="title">Les paragraphes</h4>
	  <p class="category">Les paragraphes de cet article</p>
	</div>
	 <div class="card-content table-responsive">
	     <table class="table">
        <thead>
            <tr>
                <th>Subtitle</th>
                <th>Image</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.subtitle }}</td>
                <td>{{ content.image }}</td>
                <td>{{ content.text }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('content_show', { 'id': content.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('content_edit', { 'id': content.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('content_new', { 'id': article.id }) }}">Create a new paragraphe</a>
        </li>
    </ul>
   </div 
 </div>
 </div>   
{% endblock %}
