{% extends "AppBundle::table.html.twig" %}
{% block page_title %}Nouvelle explication{% endblock %}
 {% if explication.question is not null%}
  {% set partie=explication.question.partie%}
  {% else %}
     {% if explication.content is not null%}
    {% set partie=explication.content.article.partie%}
    {% endif %}
{% endif %}   
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>
        </li> 
         <li>
          <a href="#">{{partie.titre}}</a> 
          <i class="icon-angle-right"></i>
        </li>            
        <li><a href="#">Nouvelle explication</a></li>
      </ul>
   {% endblock %}
   {% block table_title %}Saisir une explication{% endblock %} 
{% block table %}
<div class="row-fluid">  
<div class="span6">
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Enrégistrer"  class="btn btn-info"/>
    {{ form_end(edit_form) }}
    <ul>
         {% if explication.content is not null%}
        <li>
            <a href="{{ path('content_index',{'id': explication.content.article.id}) }}">Retour</a>
        </li>
         {% endif %}   
        {% if explication.question is not null%}
        <li>
            <a href="{{ path('question_index',{'id': explication.question.partie.id}) }}">Retour</a>
        </li> 
        {% endif %}    
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
   </div>  
{% if partie.containMath %}   
<div class="span6">
  <b>Editeur de formules</b>
 <div  style="width:100%;height:300px" id="editorContainer">
 </div>
 <button onclick="myFunction()">Obtenir la traduction</button>
 <p><strong>Note !</strong>Les touches de direction permettent de passer d'une case à l'autre plus facilement.</p>
</div>
{% endif %}
</div>    
{% endblock %}
 {% block helptext %}
            <p>
            Cette explication sera envpyée aux candidats ayant signalé des difficultés sur le contenu.
            </p>
  {% endblock %}