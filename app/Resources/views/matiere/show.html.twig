{% extends "AppBundle::layout.html.twig" %}
{% block title %}{{ matiere.titre }} #ID {{ matiere.id }}{% endblock %}
{% block body %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ matiere.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ matiere.description }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ matiere.poids }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ matiere.categorie }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('matiere_index', { 'id': matiere.concours.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('matiere_edit', { 'id': matiere.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
