{% extends "AppBundle::table.html.twig" %}
{% block page_title %}Partie details{% endblock %}
{% block table %}
    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ partie.titre }}</td>
            </tr>
            <tr>
                <th>Prerequis</th>
                <td>{{ partie.prerequis }}</td>
            </tr>
             <tr>
                <th>Cours</th>
                <td><a href="{{ partie.cours }}">{{ partie.cours }}</a></td>
            </tr>                     
        </tbody>
    </table>
    <ul>

        <li>
            <a href="{{ path('partie_index', { 'id': partie.matiere.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('partie_edit', { 'id': partie.id }) }}">Editer cette partie</a>
        </li>
    </ul>
{% endblock %}
