{% extends "AppBundle::table.html.twig" %}
{% block page_title %}Utilisateurs{% endblock %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Utilisateurs</a></li>
      </ul>
   {% endblock %}
   {% block table_title %}Utilisateurs{% endblock %}  
   {% block table %}               
                         <table class="table table-striped table-bordered bootstrap-datatable datatable" id="my-table-1">
                                            <thead>
                                              <th>Nom/username</th>
                                            	<th class="text-center">Tel</th>
                                            	<th class="text-center">email</th>
                                              <th class="text-center">Type</th>
                                              <th class="text-center">Derni√®re connexion</th>
                                              <th class="text-center">Actions</th>
                                            </thead>
                                            <tbody>
                                            	   {% for user in users if user.type%}
                                                <tr>
                                                	<td class="text-center">{{user.nom}}</td>
                                                	<td class="text-center">{{user.username}}</td>
                                                	<td class="text-center">{{user.email}}</td>
                                                	<td class="text-center">{{user.type}}</td>
                                                	<td class="text-center">{{user.lastLogin|date('d/m/Y h:i')}}</td>
                                                  <td class="center">
                                                    {% if user.locked %}
                                                      <a class="btn btn-small btn-danger" href="{{ path('user_toggle',{'id':user.id})}}">Debloquer</a>
                                                    {% else %}
                                                      <a class="btn btn-small btn-success" href="{{ path('user_toggle',{'id':user.id})}}">Bloquer</a>
                                                    {% endif %}
                                                <a class="btn btn-small btn-info" href="{{ path('user_edit', { 'id': user.id }) }}">
                                          <i class="halflings-icon white edit"></i>  
                                            </a>
                                                 </td>

                                  </tr>
                                    {% endfor %}
                           </tbody>
                  </table>

            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default">Nouveau utilisateur</a>
                                    
	     {% endblock %}
