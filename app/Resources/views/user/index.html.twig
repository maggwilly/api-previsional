{% extends "AdminBundle::table.html.twig" %}
{% block page_title %}Utilisateur{% endblock %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Les utilisateurs</a></li>
      </ul>
   {% endblock %}
   {% block table_title %}Utilisateurs{% endblock %}  
   {% block table %}               
                            <table class="table table-striped table-bordered bootstrap-datatable datatable" id="my-table-1">
                                            <thead>
                                                <th>Nom/username</th>
                                            	<th class="text-center">Tel</th>
                                            	<th class="text-center">email</th>
                                                <th class="text-center">Type</th>
                                                <th class="text-center">Dernière connexion</th>
                                                 <th class="text-center">Status</th>
                                            </thead>
                                            <tbody>
                                            	   {% for user in users %}
                                                <tr>
                                                	<td class="text-center">{{user.username}}</td>
                                                	<td class="text-center">{{user.phone}}</td>
                                                	<td class="text-center">{{user.email}}</td>
                                                	<td class="text-center">{{user.type}}</td>
                                                	<td class="text-center">{{user.lastLogin|date('d/m/Y h:i')}}</td>
                                                  <td class="text-center">
                                                    {% if user.locked %}
                                                      <a class="btn btn-small btn-danger" href="{{ path('user_toggle',{'id':user.id})}}">Bloqué</a>
                                                    {% else %}
                                                      <a class="btn btn-small btn-success" href="{{ path('user_toggle',{'id':user.id})}}">Actif</a>
                                                    {% endif %}
                                                    </td>
                                                </tr>
                                                     {% endfor %}
                                            </tbody>
                                        </table>
          <ul>
          <li>
            <a href="{{ path('fos_user_registration_register') }}">Créer un utilisateur</a>
          </li>
         </ul>                                     
	     {% endblock %}
