{% extends "AppBundle::table.html.twig" %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="#">Home</a>  
          <i class="icon-angle-right"></i>         
        </li> 
        <li>
      <a href="{{ path('session_index',{ 'id': concour.id }) }}">Les sessions de {{concour.nom}}</a> 
          <i class="icon-angle-right"></i>          
        </li>              
      </ul>
   {% endblock %}
 {% block table_title %}Les sessions de concours {{concour.nom}}{% endblock %}  
{% block table %}
        <table class="table table-striped table-bordered bootstrap-datatable datatable" id="my-table-1">
        <thead>
            <tr>
                <th class="col-md-6">Nom de la session</th>
                <th class="col-md-1">Programme</th>
                <th class="col-md-1">Documents</th>
                <th class="col-md-1">Liens utils</th>
                <th class="col-md-1">Nombre d'inscrit</th>
                <th class="col-md-2">Date du concours</th>
                <th class="col-md-1">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.nomConcours }}&mdash;{{ session.nom }}</td>

                <td>{% if session.preparation is not null%}{{ session.preparation.nom }}{% else %} aucun programme{% endif %}</td>
                <td> <a href="{{ path('ressource_index', { 'session': session.id }) }}">{{ session.ressources|length }} documents</a></td>
                <td><a href="{{ path('objectif_index', { 'id': session.id }) }}">{{ session.liens|length }} liens</a></td>
                <td>{{ session.nombreInscrit }}</td>
                <td>{% if session.dateConcours %}{{ session.dateConcours|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('session_show', { 'id': session.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('session_edit', { 'id': session.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="#">Notifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('session_new',{ 'id': concour.id }) }}" class="btn btn-default ">Create a new session</a>  
{% endblock %}
