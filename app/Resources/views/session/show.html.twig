{% extends "AppBundle::table.html.twig" %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="#">Home</a> 
          <i class="icon-angle-right"></i>         
        </li> 
        <li>
      <a href="{{ path('session_index',{ 'id': session.concours.id }) }}">Sessions de {{session.concours.nom}}</a> 
          <i class="icon-angle-right"></i>          
        </li>                
        <li><a href="#">Détails</a></li>
      </ul>
   {% endblock %}
 {% block table_title %}Détails d'une session de  {{session.concours.nom}} ~{{session.nom}}{% endblock %}  
{% block table %}
    <table> 
        <tbody>
            <tr>
                <th>Nom de session</th>
                <td>{{ session.nom }}</td>
            </tr>
            <tr>
                <th>Nombre de places </th>
                <td>{{ session.nombrePlace }}</td>
            </tr>
            <tr>
                <th>Nombre d'inscrit</th>
                <td>{{ session.nombreInscrit }}</td>
            </tr>
            <tr>
                <th>Date de lancement</th>
                <td>{% if session.dateLancement %}{{ session.dateLancement|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date du concours</th>
                <td>{% if session.dateConcours %}{{ session.dateConcours|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date limite des dossiers</th>
                <td>{% if session.dateDossier %}{{ session.dateDossier|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('session_index', { 'id': session.concours.id }) }}" >Back to the list</a>
        </li>
        <li>
            <a href="{{ path('session_edit', { 'id': session.id }) }}">Modifier</a>
        </li>
    </ul>

{% endblock %}
