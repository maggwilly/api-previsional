{% extends "AppBundle::layout.html.twig" %}
{% block title %}CONCOURS{% endblock %}
{% block body %}
<div class="col-md-12">
<div class="card">

  <div class="card-header" data-background-color="purple">
   <h4 class="title">Les concours</h4>
      <p class="category">Les programmes</p>
    </div>
     <div class="card-content table-responsive">
         <table class="table" id="my-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ecole</th>
                <th>Abreviation</th>
                 <th>Les sessions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concour in concours %}
               <tr>
                <td>{{ concour.nom }}</td>
                <td>{{ concour.ecole }}</td>
                <td>{{ concour.abreviation }}</td>
                <td><a href="{{ path('session_index', { 'id': concour.id }) }}">{{ concour.sessions|length }} session(s)</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('concours_show', { 'id': concour.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('concours_edit', { 'id': concour.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('concours_new') }}" class="btn btn-default ">Creer un concours</a>  
</div>
</div>
</div>

{% endblock %}
