{% extends "AppBundle::table.html.twig" %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
         <a href="#">Home</a> 
          <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Concours</a></li>
      </ul>
   {% endblock %}
    {% block table_title %}Liste des concours{% endblock %}  
   {% block table %}
         <table class="table table-striped table-bordered bootstrap-datatable datatable" id="my-table-1">
        <thead>
            <tr>
                <th class="col-md-6">Nom</th>
                <th class="col-md-3">Ecole</th>
                <th class="col-md-1">Abreviation</th>
                 <th class="col-md-1">Les sessions</th>
                <th class="col-md-1">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concour in concours %}
               <tr>
                <td>{{ concour.nom }}</td>
                <td>{{ concour.ecole }}</td>
                <td>{{ concour.abreviation }}</td>
                <td><a href="{{ path('session_index', { 'id': concour.id }) }}">{{ concour.sessions|length }} session(s)</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('concours_show', { 'id': concour.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('concours_edit', { 'id': concour.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('concours_new') }}" class="btn btn-default ">Creer un concours</a>  
{% endblock %}
