{% extends "AppBundle::table.html.twig" %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('partie_index',{'id':0})}}">Home</a> 
          <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Unités de préparation</a></li>
      </ul>
   {% endblock %}
   {% block table_title %}Unités de préparation{% endblock %}  
{% block table %}
        <table class="table table-striped table-bordered bootstrap-datatable datatable" id="my-table-1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Abreviation</th>
                <th>Prepa dispo</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for concour in concours %}
            <tr>
                <td><a href="{{ path('matiere_index', { 'id': concour.id }) }}">{{ concour.nom }}</a></td>
                <td>{{ concour.abreviation }}</td>
                <td>{% if concour.matieres is empty %}No{% else %}Yes{% endif %}</td> 
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('programme_show', { 'id': concour.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('programme_edit', { 'id': concour.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 <a href="{{ path('programme_new') }}" class="btn btn-default ">Creer un programme</a> 
{% endblock %}
