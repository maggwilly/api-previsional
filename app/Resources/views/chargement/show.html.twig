{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chargement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chargement.id }}</td>
            </tr>
            <tr>
                <th>Datesave</th>
                <td>{% if chargement.dateSave %}{{ chargement.dateSave|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ chargement.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chargement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chargement_edit', { 'id': chargement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
