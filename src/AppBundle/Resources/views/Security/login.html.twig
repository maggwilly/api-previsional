{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}L.P.M:Connexion {% endblock %}
{% block fos_user_content %}

		<div class="padding-15">


			<div class="login-box">
				<!-- login form -->
				<form action="{{ path("fos_user_security_check") }}" method="post" class="sky-form boxed">
					<header><i class="fa fa-users"></i> Connexion</header>
					{% if error %}
					<div class="alert alert-danger noborder text-center weight-400 nomargin noradius">
						
                    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                    
					</div>
					 {% endif %}
					<fieldset>	

						<section>
							<label class="label">Email ou nom d'utilisateur</label>
							<label class="input">
								<i class="icon-append fa fa-envelope"></i>
								<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
								<span class="tooltip tooltip-top-right">Email ou nom d'utilisateur</span>
							</label>
						</section>
						
						<section>
							<label class="label">Mot de passe</label>
							<label class="input">
								<i class="icon-append fa fa-lock"></i>
								<input type="password" id="password" name="_password" required="required"/>
								<b class="tooltip tooltip-top-right">Saisir votre mot de passe</b>
							</label>
					<label class="checkbox"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /><i></i>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
						</section>

					</fieldset>

					<footer>
						<button type="submit" id="_submit" name="_submit"  class="btn btn-primary pull-right">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>

						<div class="forgot-password pull-left">
							<a href="#">Mot de passe oublié ?</a> <br />

						</div>

					</footer>
				</form>
				<!-- /login form -->


      <p style="text-align:center;"><a href="{{ path('homepage') }}"><strong>Retour à l'accueil</strong></a></p>
			</div>

		</div>

{% endblock fos_user_content %}
{% block javascripts %}
       <script type="text/javascript"> var plugin_path = "{{ asset('assets/plugins/') }}";</script>
       <script type="text/javascript" src="{{ asset('assets/plugins/jquery/jquery-2.2.3.min.js') }}"></script>
       <script type="text/javascript"  src="{{ asset('assets/js/app.js') }}"></script>

 {% endblock %}