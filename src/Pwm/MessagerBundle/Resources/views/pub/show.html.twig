{% extends "MessagerBundle::layout.html.twig" %}

{% block body %}
    <h1>Pub</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pub.id }}</td>
            </tr>
            <tr>
                <th>Nomdecampagne</th>
                <td>{{ pub.nomDeCampagne }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ pub.type }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ pub.text }}</td>
            </tr>
            <tr>
                <th>Base64image</th>
                <td>{{ pub.base64Image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if pub.date %}{{ pub.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Html</th>
                <td>{{ pub.html }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pub.description }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if pub.startDate %}{{ pub.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if pub.endDate %}{{ pub.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pub_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pub_edit', { 'id': pub.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
