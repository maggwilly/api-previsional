{% extends 'base.html.twig' %}

{% block body %}
    <h1>Info</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ info.id }}</td>
            </tr>
            <tr>
                <th>Displayname</th>
                <td>{{ info.displayName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ info.email }}</td>
            </tr>
            <tr>
                <th>Photourl</th>
                <td>{{ info.photoURL }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ info.langue }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('info_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('info_edit', { 'id': info.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
