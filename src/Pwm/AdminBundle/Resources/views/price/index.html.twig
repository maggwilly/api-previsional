{% extends "AppBundle::table.html.twig" %}
{% block page_title %}Grille des tarifs{% endblock %}
  {% block page_sub_title %}
       <ul class="breadcrumb">
        <li>
          <i class="icon-home"></i>
          <a href="{{ path('homepage')}}">Home</a> 
          <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Grille des tarifs</a></li>
      </ul>
   {% endblock %}
   {% block table_title %}Grille des tarifsc{% endblock %}  
{% block table %}
        <table class="table  datatable" id="my-table-1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Starter</th>
                <th>Standard</th>
                <th>Premium</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td><a href="{{ path('price_show', { 'id': price.id }) }}">{{ price.nom }}</a></td>
                <td>{{ price.starter }}  XAF</td>
                <td>{{ price.standard }}  XAF</td>
                <td>{{ price.premium }}  XAF</td>
                <td>
               <a href="{{ path('price_edit', { 'id': price.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<a href="{{ path('price_new') }}" class="btn btn-default">Nouveau tarif</a>
{% endblock %}
