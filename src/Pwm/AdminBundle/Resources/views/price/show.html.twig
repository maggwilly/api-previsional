{% extends "AdminBundle::layout.html.twig" %}
{% block title %}{{ price.premium|upper }}{% endblock %}
{% block body %}
    <h1>Price</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ price.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ price.nom }}</td>
            </tr>
            <tr>
                <th>Starter</th>
                <td>{{ price.starter }}</td>
            </tr>
            <tr>
                <th>Standard</th>
                <td>{{ price.standard }}</td>
            </tr>
            <tr>
                <th>Premium</th>
                <td>{{ price.premium }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('price_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('price_edit', { 'id': price.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
